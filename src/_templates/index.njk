---
layout: _base.njk
---

{{ content | safe }}

<section aria-labelledby="heading">

	<h2 id="heading">{{ 'latest (heading)' | translate }}</h2>

	{% set collectionName = 'articles' + page.lang.charAt(0).toUpperCase() + page.lang.slice(1) %}
	{% set articleslist = collections[collectionName] | slice(3) %}
	<div class="cards">
		{% for article in articleslist %}
			{% include "card.njk" %}
		{% endfor %}
	</div>

	{% set maxArticles = articleslist.length | min(3) %}
	{% if maxArticles === 3 %}
		<a href="/{{ page.lang }}/articles/">{{ 'all articles (link)' | translate }}</a>
	{% endif %}
</section>